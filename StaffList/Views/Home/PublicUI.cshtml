@{
    ViewBag.Title = "PublicUI";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}
@model IEnumerable<StaffList.BussinessLayer.ModelClasses.StaffViewModel>

<h3>Personel Listesi</h3>

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">Adı-Soyadı</th>
            <th scope="col">Telefon</th>
            <th scope="col">İşlemler</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var staf in Model)
        {
            <tr>
                <td>@staf.Name @staf.Surname</td>
                <td>
                    <a style="text-decoration:none; " href="tel:@staf.Phone">@staf.Phone</a>
                </td>
                <td>
                    <a href="/Home/StaffDetail/@staf.Id" class="btn btn-success">Detay</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>

