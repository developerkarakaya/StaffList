@{
    ViewBag.Title = "Staff";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}
@model StaffList.BussinessLayer.ModelClasses.StaffViewModel

<link rel="stylesheet" href="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.css">
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/bxslider/4.2.12/jquery.bxslider.min.js"></script>
<div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom cc_cursor">
    <h1 class="h2">Personel Ekleme</h1>

</div>
<form method="post" action="/AdminPanel/Home/StaffAdd" enctype="multipart/form-data">
    <div class="form-row">
        <input type="hidden" value="@Model.Id" name="Id" />
        <div class="form-group col-md-6">
            <label for="Name">İsim</label>
            <input type="text" class="form-control" value="@Model.Name" id="Name" name="Name" placeholder="İsim" required>
        </div>
        <div class="form-group col-md-6">
            <label for="Surname">Soyisim</label>
            <input type="text" class="form-control" value="@Model.Surname" id="Surname" name="Surname" placeholder="Soyisim" required>
        </div>
        <div class="form-group col-md-6">
            <label for="Phone">Telefon</label>
            <input type="tel" class="form-control" value="@Model.Phone" id="Phone" placeholder="Telefon" name="Phone" maxlength="11" required>
        </div>
        <div class="form-group col-md-6">
            <label for="Departman">Departman</label>
            <select id="DepartmentId" name="DepartmentId" class="form-control">
                @if (Model.DepartmentId != null)
                {
                    <option value="@Model.DepartmentId" selected>@Model.DepartmanName</option>
                }
                else
                {
                    <option selected>Departman Seç</option>
                }
                @foreach (var item in ViewBag.DepartmanList)
                {
                    <option value="@item.Id">@item.Department1</option>
                }
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="Manager">Yönetici</label>
            <select id="ManagerId" name="ManagerId" class="form-control">
                @if (Model.ManagerId != null)
                {
                    <option value="@Model.ManagerId" selected>@Model.ManagerName</option>
                }
                else
                {
                    <option selected>Yönetici Seç</option>
                }
                @foreach (var item in ViewBag.ManagerList)
                {
                    <option value="@item.Id">@item.Name @item.Surname</option>
                }
            </select>
        </div>
        <div class="form-group col-md-6">
            <label for="DateOfBirth">Doğum Tarihi</label>
            <input type="date" class="form-control" value="@Model.DateOfBirth" id="DateOfBirth" placeholder="Doğum Tarihi" name="DateOfBirth">

        </div>
        <div class="form-group col-md-6">
            <label for="Foto">Fotoğraf</label>
            <input type="file" class="form-control" name="ImageList" multiple />
        </div>
        <br />
      @if (ViewBag.ImageList !=null)
      {
        <div class="col-lg-4 col-md-5 xs-margin-30px-bottom">
            <div class="team-single-img" style="width:250px">
                <div class="bxslider">
                    @foreach (var staffImage in ViewBag.ImageList)
                    {
                        <div><img src="@staffImage.ImageUrl"></div>
                    }
                </div>
            </div>
        </div>
      }

        <div class="form-group col-md-6 ">
            <input type="submit" class="btn btn-success" style="float:right" value="Personel Ekle" />
        </div>
    </div>
</form>
<script>
    $(function () {
        $('.bxslider').bxSlider({
            mode: 'fade',
            captions: true,
            slideWidth: 600
        });
    });
</script>