
@{
    ViewBag.Title = "AdminUI";
    Layout = "~/Areas/AdminPanel/Views/Shared/_AdminLayout.cshtml";
}

<div class="container py-5" id="featured-3">
    <h2 class="pb-2 border-bottom">Anasayfa</h2>
    <div class="row g-5 py-5 cc_cursor">
        <div class="feature col-md-4">
            <div class="feature-icon bg-primary bg-gradient">
                <svg class="bi" width="1em" height="1em"><use xlink:href="#people-circle"></use></svg>
            </div>
            <h2>Personel Sayısı</h2>
            <p>@TempData["staffcount"]  adet personelimiz bulunmaktadır..</p>
        </div>
        <div class="feature col-md-4">
            <div class="feature-icon bg-primary bg-gradient">
                <svg class="bi" width="1em" height="1em"><use xlink:href="#people-circle"></use></svg>
            </div>
            <h2>Departman Sayısı</h2>
            <p>@TempData["depcount"]  adet Departmanımız bulunmaktadır.</p>
        </div>
        <div class="feature col-md-4">
            <div class="feature-icon bg-primary bg-gradient">
                <svg class="bi" width="1em" height="1em"><use xlink:href="#toggles2"></use></svg>
            </div>
            <h2>Yönetici Sayısı</h2>
            <p>@TempData["managercount"]  adet Yöneticimiz bulunmaktadır.</p>
           
        </div>
    </div>
</div>
